<%- include('partials/_header'); %>

<div class="col-md-5" style="top:130px; margin:auto;">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Editar Usuario</h4>
            <form action="/update/<%= data.id %>" method="post">
                <div class="form-group">
                    <input type="text" name="nombre" value='<%= data.nombre %>' class="form-control form-control-lg">
                </div>
                <div class="form-group">
                    <input type="text" name="apellido" value='<%= data.apellido %>' class="form-control form-control-lg">
                </div>
                <div class="form-group">
                    <input type="text" name="direccion" value='<%= data.direccion %>' class="form-control form-control-lg">
                </div>
                <div class="form-group">
                    <input type="text" name="telefono" value='<%= data.telefono %>' class="form-control form-control-lg">
                </div>
                <button type="submit" class="btn btn-primary">Editar Usuario</button>
            </form>
        </div>
    </div>
</div>

<%- include('partials/_footer'); %>